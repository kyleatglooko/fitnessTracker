<%= link_to "Metric", baby_path(@baby.id, metric: true) %>
<%= link_to "Imperial", baby_path(@baby.id, metric: false) %>

<p>
	<%= @baby.first_name %>
	<%= @baby.last_name %><br>
	<p> 
		<% if not @metric %>
			Imperial: <br>
				<%= @baby.first_name %>'s height: <%= @height %> in <br>
				<%= @baby.first_name %>'s weight: <%= @weight %> lbs <br>
				<%= @baby.first_name %>'s temperature: <%= @temperature %> F degrees<br>
		<% else %>
	      	Metric: <br>
	      		<%= @baby.first_name %>'s height: <%= @height %> cm <br>
	      		<%= @baby.first_name %>'s weight: <%= @weight %> kg <br>
	      		<%= @baby.first_name %>'s temperature: <%= @temperature %> C degrees<br>
	     <% end %>
	</p>
</p>


<% @animals.each do |animal| %>
	<%= render :partial => "animals/show_animal", :locals => { :a => animal} %>
<% end %>


